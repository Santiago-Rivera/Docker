{
  "json.schemaDownload.enable": false,
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Package.json",
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "description": { "type": "string" },
          "main": { "type": "string" },
          "scripts": { "type": "object" },
          "dependencies": { "type": "object" },
          "devDependencies": { "type": "object" }
        }
      }
    }
  ]
}
